  <metal:block fill-slot="javascript_head_slot">
    <script type="text/javascript">
      var waitForEl = function(selector, callback) {
	  if (jQuery(selector).length) {
	      callback();
	  } else {
	      setTimeout(function() {
		  waitForEl(selector, callback);
	      }, 100);
	  }
      };
      
      $(document).ready(function() {
	  //hiding hideous things
	  waitForEl("#contentview-local_roles", function() {
	      // work the magic
	      $("#contentview-local_roles").hide();
	  });
	  waitForEl("#plone-contentmenu-actions", function() {
	      // work the magic
	      $("#plone-contentmenu-actions").hide();
	  });

	  
	  $(".plonetoolbar-workfow-transition.actionSeparator").hide();
	  if ($(".portalMessage.error", $(".form")).length != 0) {
	      console.log("hurdur");
	      show_hide_form();
	  }
	  
      });
      
      function show_hide_form() {
          console.log("wtaf")
          $(".hidden_form").show();
          $(".tabify").hide();
          $(".btn-bottom").hide();
          $(".btn-edit").hide();
      }

      function show_id(identificador, id_ref) {
      $(".autotoc-nav > a").css("color", "#004667");
      $("#"+id_ref).css("color", "#5f5f5f");
      console.log($("#"+id_ref).text())
      $(".autotoc-section > [style='display:inline-block;']").attr("style", "display:none;");
      $(".autotoc-section > #"+identificador).attr("style", "display:inline-block;");
      }
    </script>
  </metal:block>
  
  <metal:block fill-slot="style_slot">
    <style media="all" type="text/css">

      /* Create two equal columns that floats next to each other */
      .columne {
      float: left;
      width: 50%;
      padding: 10px;      
      }

      /* Clear floats after the columns */
      .rowe:after {
      content: "";
      display: table;
      clear: both;
      }
      
      .showtime {
      font-family: "Helvetica Neue", "Arial", sans-serif;
      text-decoration: none;
      /*padding: 6px 12px;*/
      background: #0083BE;
      color: #fafafa;
      font-weight: bold;
      position: relative;
      display: inline-block;
      width: 100%;
      padding-bottom: 2em;
      margin-bottom: 2em;
      /*margin: 10px 10px 10px 0;*/
      }
      /*.showtime:hover {
      background: #44c0ff;
      color: #fff;
      }*/
      /* fake the cut out with a masked circle*/
      .showtime:before {
      content: "";
      width: 0px;
      height: 0px;
      position: absolute !important;
      z-index: 100;
      top: 8px;
      left: -10px;
      border: 11px solid #fafafa;
      border-radius: 12px;
      }
      .showtime:after {
      content: "";
      width: 0px;
      height: 0px;
      position: absolute !important;
      z-index: 100;
      top: 8px;
      right: -10px;
      border: 11px solid #fafafa;
      border-radius: 12px;
      }

      .ticket:nth-child(n){
      padding-top:1.5em;
      padding-left: 5em;
      }

      .ticket div.documentDescription{
      color: #fff;
      }

      .div-btn {
      position:relative;
      }
      .btn-bottom {
      position:absolute;
      bottom:0;
      right:0;
      }

      .btn-edit-bottom{
      position: relative;
      }
      .btn-edit {
      position:absolute;
      bottom:0;
      right:0;
      color:#3d3f42;
      }

      .autotoc-section > .showtime {
      display: none;
      }

    </style>
  </metal:block>

